<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="styles_textViewError" parent="android:Widget.TextView">
    <item name="android:textColor">@color/red</item>
    <item name="android:justificationMode">inter_word</item>
    <item name="android:textSize">@dimen/_18sp</item>
    <item name="android:padding">@dimen/_10dp</item>
    <item name="android:minHeight">@dimen/_50dp</item>
    <item name="android:gravity">start</item>
    <item name="android:layout_marginBottom">@dimen/_10dp</item>
  </style>

</resources>
